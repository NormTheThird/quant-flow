<Window x:Class="QuantFlow.UI.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuantFlow - Dashboard" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#252525" BorderBrush="#3F3F3F" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="QuantFlow" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="20,30,20,40"
                           HorizontalAlignment="Center"/>

                <!-- Navigation Menu -->
                <Button Content="Dashboard" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Portfolios" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Algorithms" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Backtests" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Settings" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <TextBlock Text="Welcome to QuantFlow" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>