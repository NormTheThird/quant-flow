<UserControl x:Class="QuantFlow.UI.WPF.Views.PositionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:QuantFlow.UI.WPF.Controls"
             Background="{DynamicResource BackgroundColor}">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Positions Library" 
                           FontSize="32" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryColor}"/>
                <TextBlock Text="Create and test trading positions before adding them to portfolios" 
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryColor}"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="Create Position"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CreatePositionCommand}"
                    Height="44"
                    Padding="24,0"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading State -->
            <Border Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="40"
                    MinHeight="400"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <controls:LoadingSpinner SpinnerSize="45" Margin="0,0,0,16"/>
                    <TextBlock Text="Loading positions..." 
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Empty State -->
            <Border Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="40"
                    MinHeight="400">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsLoading}" Value="False"/>
                                    <Condition Binding="{Binding HasNoPositions}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📊" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="No positions yet" 
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="Create your first position to start backtesting strategies" 
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>
                    <Button Content="Create Position"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding CreatePositionCommand}"
                            Height="44"
                            Padding="24,0"/>
                </StackPanel>
            </Border>

            <!-- Positions Cards -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsLoading}" Value="False"/>
                                    <Condition Binding="{Binding HasNoPositions}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>

                <ItemsControl ItemsSource="{Binding Positions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceColor}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="24"
                                    Margin="0,0,16,16"
                                    Width="380">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header with Name and Status -->
                                    <Grid Grid.Row="0" Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Position.PositionName}" 
                                                       FontSize="18" 
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextPrimaryColor}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Position.Symbol}" 
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryColor}"
                                                       Margin="0,4,0,0"/>
                                            <TextBlock Text="{Binding AlgorithmName}" 
                                                       FontSize="12"
                                                       Foreground="{DynamicResource AccentColor}"
                                                       FontWeight="Medium"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding PortfolioName}" 
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryColor}"
                                                       FontStyle="Italic"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="1"
                                                Background="{DynamicResource AccentColor}"
                                                CornerRadius="12"
                                                Padding="12,6"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Position.Status}" 
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Divider -->
                                    <Border Grid.Row="1" 
                                            Height="1" 
                                            Background="{DynamicResource BorderColor}"
                                            Margin="0,0,0,16"/>

                                    <!-- Position Details -->
                                    <Grid Grid.Row="2" Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Max Position Size -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                            <TextBlock Text="Max Position Size" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryColor}"/>
                                            <TextBlock Text="{Binding Position.MaxPositionSizePercent, StringFormat='{}{0:F2}%'}" 
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryColor}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <!-- Exchange Fees -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                            <TextBlock Text="Exchange Fees" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryColor}"/>
                                            <TextBlock Text="{Binding Position.ExchangeFees, StringFormat='{}{0:F3}%'}" 
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryColor}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <!-- Created Date -->
                                        <StackPanel Grid.Row="2">
                                            <TextBlock Text="Created" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryColor}"/>
                                            <TextBlock Text="{Binding Position.CreatedAt, StringFormat='MMM dd, yyyy'}" 
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextPrimaryColor}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Action Buttons -->
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Width="40" 
                                                Height="40"
                                                Margin="0,0,8,0"
                                                Command="{Binding DataContext.ViewParametersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="View Parameters">
                                            <Path Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                  Fill="{DynamicResource AccentColor}"
                                                  Stretch="Uniform"
                                                  Width="20"
                                                  Height="20"/>
                                        </Button>

                                        <!-- Backtest Button -->
                                        <Button Grid.Column="1"
                                                Content="📈 Backtest"
                                                Command="{Binding DataContext.RunBacktestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource PrimaryButton}"
                                                Margin="5,0"/>

                                        <!-- Edit Button -->
                                        <Button Grid.Column="2"
                                                Command="{Binding DataContext.EditPositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="36"
                                                Height="36"
                                                Margin="0,0,4,0"
                                                ToolTip="Edit Position">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="6"
                                                                        Padding="8">
                                                                    <TextBlock Text="&#xE70F;" 
                                                                               FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="16"
                                                                               Foreground="{DynamicResource AccentColor}"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource HoverColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Command="{Binding DataContext.DeletePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="36"
                                                Height="36"
                                                ToolTip="Delete Position">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="6"
                                                                        Padding="8">
                                                                    <TextBlock Text="&#xE74D;" 
                                                                               FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="16"
                                                                               Foreground="#E74C3C"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource HoverColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>