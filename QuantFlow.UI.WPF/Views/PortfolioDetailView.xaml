<UserControl x:Class="QuantFlow.UI.WPF.Views.PortfolioDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:QuantFlow.UI.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Portfolio.Name}" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"/>
                    <TextBlock Text="{Binding Portfolio.Description}" 
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Add Position"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddPositionCommand}"
                            Height="40"
                            Padding="20,0"
                            Margin="0,0,12,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Portfolio Info Cards -->
        <Grid Grid.Row="1" Margin="24,20,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Current Balance -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Current Balance" 
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Text="{Binding Portfolio.CurrentBalance, StringFormat='{}{0:C}'}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Mode -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Mode" 
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Text="{Binding Portfolio.Mode}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Exchange -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Exchange" 
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Text="{Binding Portfolio.Exchange}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Base Currency -->
            <Border Grid.Column="3" 
                    Background="{DynamicResource SurfaceColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Base Currency" 
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Text="{Binding Portfolio.BaseCurrency}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Positions DataGrid -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="24,20,24,24"
                ClipToBounds="True">
            <Grid>
                <DataGrid ItemsSource="{Binding Positions}"
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Position Name" 
                                            Binding="{Binding PositionName}" 
                                            Width="*"
                                            MinWidth="150"/>

                        <DataGridTextColumn Header="Allocated %" 
                                            Binding="{Binding AllocatedPercent, StringFormat='{}{0:F2}%'}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Current Value" 
                                            Binding="{Binding CurrentValue, StringFormat='{}{0:C}'}" 
                                            Width="140"/>

                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            Width="100"/>

                        <DataGridTextColumn Header="Max Position %" 
                                            Binding="{Binding MaxPositionSizePercent, StringFormat='{}{0:F2}%'}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Exchange Fees %" 
                                            Binding="{Binding ExchangeFees, StringFormat='{}{0:F3}%'}" 
                                            Width="140"/>

                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <!-- Edit Icon Button -->
                                        <Button Command="{Binding DataContext.EditPositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="32"
                                                Height="32"
                                                Padding="0"
                                                Margin="0,0,8,0"
                                                ToolTip="Edit Position">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4"
                                                                        Padding="4">
                                                                    <TextBlock Text="&#xE70F;" 
                                                                               FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="16"
                                                                               Foreground="{DynamicResource AccentColor}"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource HoverColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Delete Icon Button -->
                                        <Button Command="{Binding DataContext.DeletePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="32"
                                                Height="32"
                                                Padding="0"
                                                ToolTip="Delete Position">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4"
                                                                        Padding="4">
                                                                    <TextBlock Text="&#xE74D;" 
                                                                               FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="16"
                                                                               Foreground="#E74C3C"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource HoverColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding Positions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <TextBlock Text="📊" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Opacity="0.3"/>
                    <TextBlock Text="No positions yet" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,8"/>
                    <TextBlock Text="Click 'Add Position' to create your first algorithm position" 
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:LoadingSpinner SpinnerSize="48" Margin="0,0,0,16"/>
                <TextBlock Text="Loading..." 
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>